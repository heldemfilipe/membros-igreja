{
  "version": 2,
  "builds": [
    {
      "src": "server-supabase.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server-supabase.js"
    },
    {
      "src": "/(.*\\.(js|css|html|json|png|jpg|jpeg|gif|svg|ico))",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server-supabase.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
